<?xml version="1.0"?>
<MenuItems>

	<MenuItem id="printConfig">
		<Name>Print Config and Help</Name>
		<CallbackMethod>printConfig</CallbackMethod>
    </MenuItem>



	<MenuItem id="selectActions">
		<Name>Define Actions to be enabled / disabled</Name>
		<ConfigUI>
			<Field id="lab1" type="label">
				<Label>Define indigo actions and action ID to be enabled / removed </Label>
			</Field>
			
			
	           <Field id="actionNumber" type="menu" defaultValue="" >
				<List class="self" method="filternumbers_1_100" dynamicReload="true" />
				<Label>Select Action Number:</Label>
			</Field>
			<Field id="actionNumberConfirm" type="button">
				<Label>confirm Action number</Label>
				<Title>CONFIRM</Title>
				<CallbackMethod>actionNumberConfirmCallback</CallbackMethod>
			</Field>
			
           <Field id="actionadd" type="menu" defaultValue="" >
				<List class="self" filter = "add" method="filterActions" dynamicReload="true" />
				<Label>Select Action to be enabled to be added:</Label>
			</Field>
			
			<Field id="xactionsadd" type="button">
				<Label>After selection click</Label>
				<Title>ADD</Title>
				<CallbackMethod>addActionsCallback</CallbackMethod>
			</Field>
			
           <Field id="actiondel" type="menu" defaultValue="def" >
				<List class="self" filter = "remove" method="filterActions" dynamicReload="true" />
				<Label>Select Action to be deleted:</Label>
			</Field>
			<Field id="xactionsdel" type="button">
				<Label>After selection click</Label>
				<Title>DEL</Title>
				<CallbackMethod>delActionsCallback</CallbackMethod>
			</Field>

		</ConfigUI>
	</MenuItem>

	<MenuItem id="synomymesActions">
		<Name>Define Action Synonymes</Name>
		<ConfigUI>
			<Field id="lab1" type="label">
				<Label>Define synonyms for actions: Here you can define short phrases for long named indigo actions </Label>
			</Field>
			
           <Field id="id" type="menu" defaultValue="" >
				<List class="self" filter = "synonymes" method="filterActions" dynamicReload="true" />
				<Label>Select Action to be enabled to be used:</Label>
			</Field>
           <Field id="add" type="textfield" defaultValue="" >
				<Label>define synonym for this action</Label>
			</Field>
			
			<Field id="addexec" type="button">
				<Label>After selection click</Label>
				<Title>ADD</Title>
				<CallbackMethod>addSynonymActionCallback</CallbackMethod>
			</Field>

			
 			<Field id="lab2" type="label">
				<Label>define synonym to be removed</Label>
			</Field>
			
            <Field id="remove" type="menu" defaultValue="" >
				<List class="self"  method="filterSynonymesActions" dynamicReload="true" />
				<Label>Select synonym:</Label>
			</Field>
			
			<Field id="removeexec" type="button">
				<Label>After selection click</Label>
				<Title>REMOVE</Title>
				<CallbackMethod>removeSynonymActionCallback</CallbackMethod>
			</Field>
		</ConfigUI>
	</MenuItem>

