	<MenuItem id="badGood">
		<Name>Define mapping of phrases </Name>
		<ConfigUI>
			<Field id="lab1" type="label">
				<Label>define mapping from unclear to good phrases, eg "the bug" to "debug" </Label>
			</Field>
          <Field id="from" type="textfield" defaultValue="" >
				<Label>define unclear phrase</Label>
			</Field>
         <Field id="to" type="textfield" defaultValue="" >
				<Label>define good phrase</Label>
			</Field>
			
			<Field id="xaddbad" type="button">
				<Label>After selection click</Label>
				<Title>ADD</Title>
				<CallbackMethod>addFromCallback</CallbackMethod>
			</Field>

			
 			<Field id="lab2" type="label">
				<Label>define from unclear phrase to be removed</Label>
			</Field>
			
			
            <Field id="fromRemove" type="menu" defaultValue="" >
				<List class="self"  method="filterFromTo" dynamicReload="true" />
				<Label>Select unclear phrase:</Label>
			</Field>
			
			<Field id="xremoveBad" type="button">
				<Label>After selection click</Label>
				<Title>REMOVE</Title>
				<CallbackMethod>removeFromCallback</CallbackMethod>
			</Field>


		</ConfigUI>
	</MenuItem>
	
